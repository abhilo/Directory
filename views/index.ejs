<div class="author container-fluid">
    <h1 class="author__heading"> Hi, I am am Abhi. </h1>
    <p class="author__body"> Current UTSG Computer Science Student. </p>
</div>


<div class="container-fluid">
    <img src="/img/trinity-home-wide-01.jpg" alt="" class="hero-img" width="950" height="520">
</div>


<section class="articles">
    <h2 class="articles__heading"> Latests Posts </h2>

    <ul class="article-ul">


        <% data.forEach(item => { %>
         
        <li>
            <a href="/post/<%=item._id %>">
                <span> <%= item.title %> </span>
                <span class="article-list__date"> <%= item.createdAt %> </span>
            </a>
        </li>

        <% }) %>

    </ul>



    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination"> &lt; View Older Posts</a>  
    <% } %>

</section>

